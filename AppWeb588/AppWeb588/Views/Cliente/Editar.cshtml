@model AppWeb588.Models.Cliente
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="estiloSection">
    <div class="contenedor100">
        <h3 class="estiloH1"> Editar Cliente </h3>
        <div class="contenedorDatos">

            <div class="contenedor20">
                <div>
                    <a class="estiloBoton" asp-action="Index"> Volver al Listado </a>
                </div>
            </div>

            <div class="contenedor50">
                <form asp-action="Editar">

                    <div>

                        <input asp-for="Codigo" type="hidden" />  @*//esto significa que el codigo va a estar oculto//*@
                        <span class="text-danger"> @ViewData["msj"]</span>
                    </div>

                    <div>
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" type="text" class="form-control" required placeholder="Nombre Apellido"/>
                    </div>

                    <div>
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" type="email" class="form-control" required placeholder="usuario@proveedor"/>
                    </div>

                    <div>
                        <input type ="submit" class="estiloBoton" value="Actualizar" />
                    </div>

                </form>
            </div>

        </div>
    </div>
</section>


